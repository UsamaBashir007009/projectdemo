<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_60"
        android:layout_height="match_parent"
        tools:context=".ui.main.PlaceholderFragment"
        android:background="@color/white">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="263dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:foregroundGravity="center_horizontal"
            app:cardBackgroundColor="@color/lightgray"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_50"
                android:orientation="vertical">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/profileImage"
                    android:layout_width="@dimen/dp_150"
                    android:layout_height="@dimen/dp_150"
                    android:layout_marginLeft="100dp"
                    android:layout_marginRight="100dp"
                    android:src="@drawable/job_electrician"
                    app:civ_border_color="#090000"
                    app:civ_border_width="4dp"
                    app:civ_shadow="true"
                    app:civ_shadow_color="#0C0000"
                    app:civ_shadow_radius="10" />

                <TextView
                    android:id="@+id/profileName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:text="Ehtisham"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold" />


            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/profileAdress"
            android:layout_width="391dp"
            android:layout_height="50dp"
            android:background="@color/lightgray"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="300dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"

            android:text="  Ehtisham Hafeez"
            android:gravity="fill"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/profileEmail"
            android:layout_width="391dp"
            android:layout_height="50dp"
            android:layout_below="@+id/profilePhone"
            android:layout_marginLeft="10dp"
            android:background="@color/lightgray"
            android:textColor="@color/black"
            android:layout_marginTop="12dp"
            android:layout_marginRight="10dp"
            android:gravity="fill"
            android:text="  ehtishamhafeez37@gmail.com"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/profilePhone"
            android:layout_width="391dp"
            android:layout_height="50dp"
            android:layout_below="@+id/profileAdress"
            android:background="@color/lightgray"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"
            android:gravity="fill"
            android:text="  0303-6436506"
            android:textSize="20dp" />

    </RelativeLayout>
</ScrollView>