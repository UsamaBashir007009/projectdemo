<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/job_request_layout"
    android:layout_width="340dp"
    android:background="@color/grey"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/rIDd"
        android:layout_height="wrap_content"
        android:text="id"
        android:textStyle="bold"
        android:textSize="@dimen/dp_30"
        android:layout_gravity="center"
        />
    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/job_request_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/job_electrician"
        app:civ_border_color="#3f51b5"
        android:layout_gravity="center"
        app:civ_border_width="4dp"
        app:civ_shadow="true"
        app:civ_shadow_color="#3f51b5"
        app:civ_shadow_radius="10" />

    <TextView
        android:id="@+id/job_request_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_30"
        android:layout_gravity="center"
        android:text="ks"
        android:textSize="20dp"
        android:textStyle="bold" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:hint="Enter Your Task"
        android:text=""
        android:id="@+id/job_task_request_description"
        android:background="@color/cardview_shadow_start_color"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_10"
        android:hint="Enter Your Location"
        android:layout_marginLeft="@dimen/dp_20"
        android:text=""
        android:layout_marginRight="@dimen/dp_20"
        android:id="@+id/job_task_location"
        android:background="@color/cardview_shadow_start_color"
        />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send Request"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_gravity="center"
            android:id="@+id/job_request_btn"
            />


</LinearLayout>