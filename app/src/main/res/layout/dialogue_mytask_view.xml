<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/mytask_dialogue_layout"
    android:layout_width="380dp"
    android:background="@color/grey"
    android:layout_gravity="center"
    android:layout_height="wrap_content">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/mytask_dialogue_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/job_electrician"
        app:civ_border_color="#3f51b5"
        android:layout_gravity="center"
        app:civ_border_width="4dp"
        app:civ_shadow="true"
        app:civ_shadow_color="#3f51b5"
        app:civ_shadow_radius="10" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:id="@+id/mytask_dialogue_name"
        android:text="1"
        android:textColor="@color/black"
        android:textSize="18sp"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:orientation="horizontal"
        android:background="@color/lightgray"
        android:layout_marginTop="@dimen/dp_3"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="My Task Id          :"
            android:layout_marginLeft="@dimen/dp_20"
            android:textColor="@color/black"
            android:textSize="18sp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:id="@+id/mytask_dialogue_id"
            android:text="1"
            android:layout_marginLeft="@dimen/dp_20"
            android:textColor="@color/black"
            android:textSize="18sp"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/lightgray"
        android:layout_marginTop="@dimen/dp_3"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:textStyle="bold"
            android:text="Job Id                   :"
            android:layout_marginLeft="@dimen/dp_20"
            android:textColor="@color/black"
            android:textSize="18sp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:id="@+id/mytask_dialogue_job_id"
            android:text="1"
            android:layout_marginLeft="@dimen/dp_20"
            android:textColor="@color/black"
            android:textSize="18sp"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:background="@color/lightgray"
        android:layout_marginTop="@dimen/dp_3"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Location               :"
            android:layout_marginLeft="@dimen/dp_20"
            android:textColor="@color/black"
            android:textSize="18sp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:id="@+id/mytask_dialogue_location"
            android:text="1"
            android:layout_marginLeft="@dimen/dp_20"
            android:textColor="@color/black"
            android:textSize="18sp"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:orientation="horizontal"
        android:background="@color/lightgray"
        android:layout_marginTop="@dimen/dp_3"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Bill                         :"
            android:layout_marginLeft="@dimen/dp_20"
            android:textColor="@color/black"
            android:textSize="18sp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:id="@+id/mytask_dialogue_bill"
            android:text="1"
            android:layout_marginLeft="@dimen/dp_20"
            android:textColor="@color/black"
            android:textSize="18sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:orientation="horizontal"
        android:background="@color/lightgray"
        android:layout_marginTop="@dimen/dp_3"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="User Id                   :"
            android:layout_marginLeft="@dimen/dp_20"
            android:textColor="@color/black"
            android:textSize="18sp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:id="@+id/mytask_dialogue_userId"
            android:text="1"
            android:layout_marginLeft="@dimen/dp_20"
            android:textColor="@color/black"
            android:textSize="18sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/lightgray"
        android:layout_marginTop="@dimen/dp_3"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Date                       :"
            android:layout_marginLeft="@dimen/dp_20"
            android:textColor="@color/black"
            android:textSize="18sp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:id="@+id/mytask_dialogue_date"
            android:text="1"
            android:layout_marginLeft="@dimen/dp_20"
            android:textColor="@color/black"
            android:textSize="18sp"
            />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:id="@+id/mytask_btn"
        android:layout_height="wrap_content"
        android:text="Done"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_gravity="center_horizontal"
        />

</LinearLayout>